<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="oxbot">
    <link name="base_footprint"/>

    <link name="chassis_bottom_link">
        <inertial>
            <origin xyz="0 0 0.0575" rpy="0.0 0.0 0.0"/>
            <mass value="8"/>
            <inertia ixx="9.330733e-02" iyy="2.1713733e-01" izz="2.92811333e-01"/>
        </inertial>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://oxbot_description/meshes/oxbot_chassis_bottom.stl"/>
            </geometry>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://oxbot_description/meshes/oxbot_chassis_bottom.STL"/>
            </geometry>
        </collision>
    </link>

    <joint name="chassis_bottom_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="chassis_bottom_link"/>
        <origin rpy="0 0 0" xyz="0 0 0.071"/>
    </joint>

    <link name="wheel_front_right_link">
        <inertial>
            <mass value="3"/>
            <inertia ixx="6.7775e-01" iyy="6.7775e-01" izz="1.35375e-02"/>
        </inertial>
        <visual>
            <origin rpy="0 0 0" xyz="75 0 0"/>
            <geometry>
                <mesh filename="package://oxbot_description/meshes/oxbot_front_wheel.stl"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://oxbot_description/meshes/oxbot_front_wheel.stl"/>
            </geometry>
        </collision>
    </link>

    <joint name="wheel_front_right_joint" type="continuous">
        <parent link="chassis_bottom_link"/>
        <child link="wheel_front_right_link"/>
        <axis xyz="1 0 0"/>
        <origin rpy="0 0 0" xyz="-0.28 0.1325 0"/>
    </joint>


</robot>